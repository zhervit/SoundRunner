<Window x:Class="soundboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:soundboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="928.232" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="913*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnPlay" Content="PlayTest" HorizontalAlignment="Left" Height="40" Margin="25,82,0,0" VerticalAlignment="Top" Width="101" Click="btnPlay_Click"/>
        <ListBox x:Name="txtDevices" HorizontalAlignment="Left" Height="208" Margin="152,82,0,0" VerticalAlignment="Top" Width="389" SelectionChanged="txtDevices_SelectionChanged"/>
    </Grid>
</Window>
